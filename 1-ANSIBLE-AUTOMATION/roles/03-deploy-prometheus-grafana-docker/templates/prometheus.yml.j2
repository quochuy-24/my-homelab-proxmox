global:
  scrape_interval: 15s
  external_labels:
    monitor: 'codelab-monitor'

scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node-exporter'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9100']

  - job_name: 'opnsense'
    scrape_interval: 5s
    static_configs:
      - targets: ['192.168.1.104:9100']

  - job_name: 'testing'
    scrape_interval: 5s
    static_configs:
      - targets: ['192.168.1.106:9100']

  - job_name: 'web-server'
    scrape_interval: 5s
    static_configs:
      - targets: ['10.10.20.10:9100']
